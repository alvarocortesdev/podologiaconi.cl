{
  "name": "podologiaconi-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prisma:generate": "node ./node_modules/prisma/build/index.js generate --schema=packages/database/prisma/schema.prisma",
    "build": "npm run prisma:generate && npm run build --workspace=apps/client"
  },
  "devDependencies": {
    "prisma": "^5.10.0"
  }
}
